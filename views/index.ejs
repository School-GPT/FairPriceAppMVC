<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Welcome - FairPrice</title>

    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
            background: #f0f0f0;
        }

        .split-container {
            display: flex;
            height: 100vh;
            margin-top: 56px; /* Prevent card from overlapping navbar */
        }

        /* LEFT IMAGE */
        .left-image {
            flex: 1;
            background-image: url("/images/FairPrice.jpg"); 
            background-size: cover;
            background-position: center;
        }

        /* RIGHT PANEL */
        .right-panel {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px;
            background: #f8f8f8;
        }

        /* GLASS CARD */
        .glass-card {
            width: 85%;
            max-width: 450px;
            padding: 35px;
            border-radius: 25px;
            background: rgba(255, 255, 255, 0.35);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.25);
            text-align: center;
            box-shadow: 0px 8px 20px rgba(0,0,0,0.15);
            animation: fadeIn 0.8s ease;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to   { opacity: 1; transform: translateY(0); }
        }

        .welcome-title {
            font-size: 2rem;
            font-weight: 700;
        }

        .welcome-text {
            font-size: 1.1rem;
            margin-top: 10px;
            margin-bottom: 20px;
        }

        .btn-main {
            width: 100%;
            background: #ff4d4d;
            color: white;
            font-size: 1.2rem;
            font-weight: bold;
            padding: 12px;
            border-radius: 20px;
            border: none;
            margin-top: 15px;
        }

        .btn-main:hover {
            background: #d60000;
        }

        .alt-link {
            font-weight: bold;
            color: #d60000;
        }
    </style>
</head>

<body>

<!-- NAVBAR PARTIAL -->
<%- include('partials/navbar', { user: user }) %>

<div class="split-container">

    <!-- LEFT IMAGE -->
    <div class="left-image"></div>

    <!-- RIGHT PANEL -->
    <div class="right-panel">
        <div class="glass-card">

            <h2 class="welcome-title">Welcome to FairPrice App</h2>

            <% if (!user) { %>
                <p class="welcome-text">Please login or register to continue shopping.</p>

                <button class="btn-main" onclick="window.location.href='/login'">Login</button>
                <button class="btn-main" style="margin-top: 10px; background:#333;"
                        onclick="window.location.href='/register'">Register</button>

            <% } else { %>

                <% if (user.role === 'admin') { %>
                    <p class="welcome-text">Manage your store inventory.</p>
                    <button class="btn-main" onclick="window.location.href='/inventory'">Go to Inventory</button>

                <% } else { %>
                    <p class="welcome-text">Ready to shop today?</p>
                    <button class="btn-main" onclick="window.location.href='/shopping'">Start Shopping</button>
                <% } %>

                <p class="mt-3">Not you?  
                    <a href="/logout" class="alt-link">Logout</a>
                </p>

            <% } %>

        </div>
    </div>

</div>


</body>
</html>

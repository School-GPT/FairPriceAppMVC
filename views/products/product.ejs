<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= product.productName %> - Supermarket App</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: #fafafa;
            font-family: 'Poppins', sans-serif;
        }

        .product-container {
            margin-top: 40px;
        }

        .product-card {
            background: rgba(255,255,255,0.6);
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 8px 22px rgba(0,0,0,0.1);
            backdrop-filter: blur(8px);
        }

        .product-img-large {
            width: 100%;
            height: 350px;
            object-fit: contain;
            border-radius: 15px;
            background: white;
            padding: 15px;
        }

        .price-tag {
            color: #ff3d3d;
            font-weight: 700;
            font-size: 1.8rem;
        }

        .btn-add {
            width: 100%;
            background: #ff4d4d;
            color: white;
            font-size: 1.2rem;
            padding: 12px;
            border-radius: 20px;
            border: none;
            margin-top: 15px;
        }

        .btn-add:hover {
            background: #e60000;
        }

        .back-link {
            margin-top: 20px;
            display: inline-block;
        }
    </style>
</head>

<body>

<!-- NAVBAR -->
<%- include('../partials/navbar', { user: user }) %>

<!-- ALERTS -->
<div class="container mt-3">
    <%- include('../partials/alerts', { errors: errors, messages: messages }) %>
</div>

<div class="container product-container">
    <div class="row justify-content-center">

        <div class="col-md-10 product-card">

            <div class="row">
                <!-- LEFT: Image -->
                <div class="col-md-5">
                    <img src="/images/<%= product.image %>" class="product-img-large">
                </div>

                <!-- RIGHT: Info -->
                <div class="col-md-7">

                    <h2 class="fw-bold"><%= product.productName %></h2>

                    <p class="price-tag">$<%= product.price.toFixed(2) %></p>

                    <p class="mt-3">
                        <strong>Available Quantity:</strong> 
                        <%= product.quantity %>
                    </p>

                    <!-- Add to Cart -->
                    <form action="/cart/add/<%= product.id %>" method="POST">
                        <label class="fw-bold mt-3">Quantity</label>
                        <input type="number" name="quantity" min="1" value="1" class="form-control mb-3" style="width: 120px; border-radius: 15px;">

                        <button class="btn-add">Add to Cart</button>
                    </form>

                    <!-- Back to Shopping -->
                    <a href="/shopping" class="btn btn-outline-dark back-link" style="border-radius: 20px; padding: 8px 20px;">
                        ‚Üê Back to Shopping
                    </a>
                </div>

            </div>
        </div>

    </div>
</div>


</body>
</html>

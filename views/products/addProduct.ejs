<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product - Admin</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: #f8f9fa;
            font-family: 'Poppins', sans-serif;
        }

        .glass-card {
            width: 60%;
            margin: 40px auto;
            padding: 30px;
            background: rgba(255,255,255,0.55);
            border-radius: 20px;
            backdrop-filter: blur(6px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.2);
        }

        .btn-save {
            background: #ff4d4d;
            color: white;
            border-radius: 15px;
            width: 100%;
            font-weight: bold;
            padding: 10px;
        }
    </style>
</head>

<body>

    <!-- NAVBAR -->
    <%- include('../partials/navbar', { user: user }) %>

    <div class="glass-card">
        <h2 class="text-center fw-bold">Add New Product</h2>

        <form action="/addProduct" method="POST" enctype="multipart/form-data" class="mt-4">

            <label class="fw-bold">Product Name</label>
            <input type="text" name="name" class="form-control mb-3" required>

            <label class="fw-bold">Quantity</label>
            <input type="number" name="quantity" class="form-control mb-3" required>

            <label class="fw-bold">Price</label>
            <input type="number" step="0.01" name="price" class="form-control mb-3" required>

            <label class="fw-bold">Product Image</label>
            <input type="file" name="image" class="form-control mb-3" required>

            <!-- CATEGORY SECTION -->
            <label class="fw-bold">Category</label>
            <select name="category" id="categorySelect" class="form-control mb-3">
                <option value="Fruits">Fruits</option>
                <option value="Vegetables">Vegetables</option>
                <option value="Dairy">Dairy</option>
                <option value="Bakery">Bakery</option>
                <option value="Drinks">Drinks</option>
                <option value="Snacks">Snacks</option>
                <option value="New">âž• Add New Category</option>
            </select>

            <!-- NEW CATEGORY (Hidden until selected) -->
            <input type="text" 
                name="newCategory" 
                id="newCategoryInput" 
                class="form-control mb-3"
                placeholder="Enter new category..."
                style="display:none;">

            <button type="submit" class="btn-save">Save Product</button>
        </form>
    </div>

    <script>
        document.getElementById("categorySelect").addEventListener("change", function () {
            const newCatInput = document.getElementById("newCategoryInput");
            newCatInput.style.display = (this.value === "New") ? "block" : "none";
        });
    </script>

</body>
</html>

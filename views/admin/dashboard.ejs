<!DOCTYPE html>
<html>
<head>
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: #f2f2ff;
            font-family: 'Poppins', sans-serif;
        }

        .metric-box {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 5px 15px rgba(0,0,0,.1);
            text-align: center;
        }

        .metric-number {
            font-size: 2.2rem;
            font-weight: 700;
            color: #5a3dff;
        }

        .section-title {
            font-weight: 700;
            margin-top: 25px;
        }

        .low-stock {
            color: red;
            font-weight: bold;
        }
    </style>
</head>

<body>

<%- include('../partials/navbar', { user: user }) %>

<div class="container mt-4">

    <h1 class="text-center mb-4">üìä Admin Dashboard</h1>

    <!-- Metrics Row -->
    <div class="row g-4">

        <div class="col-md-3">
            <div class="metric-box">
                <div class="metric-number"><%= metrics.totalUsers %></div>
                <p>Users</p>
            </div>
        </div>

        <div class="col-md-3">
            <div class="metric-box">
                <div class="metric-number"><%= metrics.totalProducts %></div>
                <p>Products</p>
            </div>
        </div>

        <div class="col-md-3">
            <div class="metric-box">
                <div class="metric-number"><%= metrics.totalOrders %></div>
                <p>Total Orders</p>
            </div>
        </div>

        <div class="col-md-3">
            <div class="metric-box">
                <div class="metric-number">$<%= metrics.totalSales %></div>
                <p>Sales</p>
            </div>
        </div>

    </div>

    <!-- Low Stock Section -->
    <h3 class="section-title">‚ö† Low Stock Items</h3>
    <table class="table table-bordered bg-white">
        <thead>
            <tr>
                <th>Product</th>
                <th>Remaining</th>
            </tr>
        </thead>
        <tbody>
            <% lowStock.forEach(item => { %>
                <tr>
                    <td><%= item.productName %></td>
                    <td class="low-stock"><%= item.quantity %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <!-- Recent Orders -->
    <h3 class="section-title">üìù Recent Orders</h3>
    <table class="table table-striped bg-white">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>User</th>
                <th>Total</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            <% recentOrders.forEach(o => { %>
                <tr>
                    <td><%= o.id %></td>
                    <td><%= o.username %></td>
                    <td>$<%= o.total_amount %></td>
                    <td><%= o.created_at.toLocaleString() %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

</div>

</body>
</html>

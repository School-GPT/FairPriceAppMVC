<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <title>Login - FairPrice</title>
    
    <style>
        body {
            background: #f0f0f0;
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
        }

        .split-container {
            display: flex;
            height: 100vh;
        }

        /* LEFT SIDE IMAGE */
        .left-image {
            flex: 1;
            background-image: url("/images/FairPrice.jpg"); 
            background-size: cover;
            background-position: center;
        }

        /* RIGHT LOGIN AREA */
        .right-panel {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px;
            background: #f8f8f8;
        }

        /* GLASS CARD */
        .glass-card {
            width: 80%;
            max-width: 420px;
            padding: 30px;
            border-radius: 20px;
            background: rgba(255, 255, 255, 0.35);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
            text-align: center;
        }

        .tab-buttons button {
            width: 48%;
            border-radius: 20px;
            border: none;
            padding: 10px 0;
            font-weight: bold;
            font-size: 1.1rem;
        }

        .tab-active {
            background: white;
            box-shadow: 0 4px 10px rgba(0,0,0,0.15);
        }

        .tab-inactive {
            background: rgba(255,255,255,0.4);
        }

        .form-control {
            border-radius: 15px;
            padding: 12px;
            font-size: 1.1rem;
            background: rgba(255,255,255,0.7);
        }

        .btn-login {
            width: 100%;
            padding: 12px;
            font-size: 1.2rem;
            border-radius: 20px;
            background: #ff4d4d;
            font-weight: bold;
            border: none;
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
            color: white;
        }
    </style>
</head>

<body>

    <!-- NAVBAR PARTIAL -->
    <%- include('../partials/navbar') %>

    <div class="split-container">

        <!-- LEFT IMAGE -->
        <div class="left-image"></div>

        <!-- RIGHT LOGIN PANEL -->
        <div class="right-panel">
            <div class="glass-card">

                <h2 class="fw-bold">Welcome back!</h2>
                <p>Log in to continue.</p>

                <!-- LOGIN / REGISTER TABS -->
                <div class="d-flex justify-content-between mb-4 tab-buttons">
                    <button class="tab-active">Login</button>
                    <button class="tab-inactive" onclick="window.location.href='/register'">Register</button>
                </div>

                <!-- ERRORS -->
                <% if (errors && errors.length > 0) { %>
                    <div class="alert alert-danger">
                        <% errors.forEach(e => { %>
                            <p><%= e %></p>
                        <% }) %>
                    </div>
                <% } %>

                <!-- SUCCESS MESSAGES -->
                <% if (messages && messages.length > 0) { %>
                    <div class="alert alert-success">
                        <% messages.forEach(m => { %>
                            <p><%= m %></p>
                        <% }) %>
                    </div>
                <% } %>

                <!-- LOGIN FORM -->
                <form action="/login" method="POST" class="text-start">

                    <label class="mt-2 fw-bold">Email</label>
                    <input type="email" name="email" class="form-control mb-3" required>

                    <label class="fw-bold">Password</label>
                    <input type="password" name="password" class="form-control mb-4" required>

                    <button type="submit" class="btn-login">Login</button>
                </form>

            </div>
        </div>
    </div>

</body>
</html>
